{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/admin/login",
      "dest": "/api/admin/login.js"
    },
    {
      "src": "/api/admin/dashboard",
      "dest": "/api/admin/dashboard.js"
    },
    {
      "src": "/api/admin/users",
      "dest": "/api/admin/users.js"
    },
    {
      "src": "/api/admin/user/([^/]+)",
      "dest": "/api/admin/user/[id].js?id=$1"
    },
    {
      "src": "/api/admin/states",
      "dest": "/api/admin/states.js"
    },
    {
      "src": "/api/admin/signup",
      "dest": "/api/admin/signup.js"
    },
    {
      "src": "/api/admin/pending-users",
      "dest": "/api/admin/pending-users.js"
    },
    {
      "src": "/api/admin/approve-user",
      "dest": "/api/admin/approve-user.js"
    },
    {
      "src": "/api/admin/reject-user",
      "dest": "/api/admin/reject-user.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/admin/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "DB_NAME": "@db_name",
    "COLLECTION_NAME": "@collection_name",
    "ADMIN_COLLECTION": "@admin_collection",
    "ADMIN_EMAIL": "@admin_email",
    "ADMIN_PASSWORD": "@admin_password"
  }
}

